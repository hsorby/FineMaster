<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.wabbit.trouncing.rascal.finemaster"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nz.wabbit.trouncing.rascal.finemaster.FineMaster"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MemberAdder" android:label="@string/member_activity_title"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name="FineAdder" android:label="@string/fine_activity_title"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity android:name="MemberFineAdder" android:label="@string/member_fine_title"
            android:theme="@style/FullscreenTheme" ></activity>
        <activity android:name="DepositAdder" android:label="@string/deposit_activity"
            android:theme="@style/FullscreenTheme" ></activity>
        <activity android:name="CalendarView" android:label="@string/calendar_activity"
            android:theme="@style/FullscreenTheme" ></activity>
        <activity android:name="EntryList" android:label="@string/entry_list_activity"
            android:theme="@style/FullscreenTheme" ></activity>
        <activity android:name="FineManager" android:label="@string/fine_manager_activity"
            android:theme="@style/FullscreenTheme" ></activity>
        </application>

</manifest>